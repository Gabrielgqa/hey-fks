{
   "compilerOptions": {
      "target": "es2021",
      "strict": false,
      "module": "commonjs",
      "typeRoots": [
         "./src/@types",
         "node_modules/@types"
      ],
      "esModuleInterop": true,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
   }
}